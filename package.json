{
  "name": "fcp-dal-upstream-mock",
  "version": "0.0.0",
  "description": "fcp-dal-upstream-mock",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "NODE_ENV=development nodemon --ext js,json -w ./src",
    "git:pre-commit-hook": "npm run lint",
    "postinstall": "npm run setup:husky",
    "lint": "eslint . && prettier --check . && npm run verify:schemata",
    "lint:fix": "eslint . --fix && prettier --log-level warn --write .",
    "postversion": "git add package.json package-lock.json && git commit -m $npm_package_version",
    "test": "NODE_OPTIONS=--experimental-vm-modules node --no-experimental-require-module ./node_modules/jest/bin/jest.js --coverage --verbose --runInBand",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules node --no-experimental-require-module ./node_modules/jest/bin/jest.js --watch",
    "start": "NODE_ENV=production node --use-strict . | jq .",
    "setup:husky": "node -e \"try { (await import('husky')).default() } catch (e) { if (e.code !== 'ERR_MODULE_NOT_FOUND') throw e }\" --input-type module",
    "test:contract": "docker compose -f compose.yml -f test/contract/compose.yml run --quiet-pull --build --rm contract-tests",
    "verify:schemata": "redocly lint src/routes/**/*-schema*.yml",
    "test:contract:local": "dotenv -- ./test/contract/check-schema.sh"
  },
  "author": "Defra DDTS",
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@defra/hapi-tracing": "^1.0.0",
    "@elastic/ecs-pino-format": "^1.5.0",
    "@faker-js/faker": "^9.8.0",
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.3.12",
    "@hapi/inert": "^7.1.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "convict": "^6.2.4",
    "hapi-pino": "^13.0.0",
    "hapi-pulse": "^3.0.1",
    "pino": "^10.0.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@redocly/cli": "^1.34.5",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.32.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "globals": "^16.0.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "swagger-parser": "^8.0.4"
  },
  "eslintConfig": {
    "extends": [
      "eslint-plugin-import",
      "eslint-plugin-jest"
    ]
  }
}
